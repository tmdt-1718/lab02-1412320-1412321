<div class="container">
  <div class="row">
    <div class="col-2">
      <div class="conversation-box">
        <div class="card border-primary">
          <div class="card-body">
            <div id="compose" class="btn btn-danger">Compose</div>
            <div class="menu">
              <div class="card-title" id="inbox">Inbox (21)</div>
              <div class="card-title" id="sent">Sent</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-10">
      <div class="conversation-box">
        <div class="card border-primary">
          <div class="card-body" id="message-window">
            <% if @message %>
              <%= render 'message_content' %>
            <% else %>
              <%= render 'message_list' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>