<% if @new_message && @users %>
  <div class="modal fade" id="new-message">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="container">
        <%= form_for @new_message, remote: true do |f| %>
          <div class="row">
            <div class="col-6">
            <div class="form-group">
              <select class="form-control select-friend" name="message[user_id]">
                <% @users.each do |user| %>
                  <option value="<%= user.id %>"><%= user.name %></option>
                <% end %>
              </select>
            </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.text_area :content, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.submit "Send", class: "btn btn-success" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  <script>
    $('.select-friend').select2({width: "100%"});
  </script>
<% end %>
