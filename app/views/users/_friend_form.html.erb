<% unless current_user?(@user) %>
  <div id="friend_form">
  <% if @relationship %>
    <% if current_user.is_pending?(@relationship.status) %>
      <% if @relationship.user_one_id == current_user.id %>
        <%= render 'pending' %>
      <% else %>
        <%= render 'accept' %>
      <% end %>
    <% elsif current_user.is_friend?(@relationship) %>
      <%= render 'unfriend' %>
      <% if current_user.is_block?(@relationship) %>
        <%= render 'unblock' %>
      <% else %>
        <%= render 'block' %>
      <% end %>
    <% end %>
  <% else %>
    <%= render 'add_friend' %>
  <% end %>
  </div>
<% end %>
