<% @relationships.each do |relationship| %>
  <% if relationship.status > 1 %>
    <% if relationship.user_one_id == @user.id %>
      <%= gravatar_for(relationship.user_two, size: 30) %><%= relationship.user_two.name %><br/>
    <% else %>
      <%= gravatar_for(relationship.user_one, size: 30) %><%= relationship.user_one.name %><br/>
    <% end %>
  <% end %>
<% end %>
